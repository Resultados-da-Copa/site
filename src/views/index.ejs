<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Resultados da Copa - Página Inicial</title>
    <link rel="stylesheet" href="./css/index.css">
    <%- include('./partials/head')%>
</head>

<body>
    <!--***** Header *****-->
    <%- include('./partials/header')%>

        <!--***** Main section of website *****-->
        <main>
            <div id="main-news">
                <div id="main-news-img">
                    <!-- <img src="./img/match-placeholder.jpg" alt=""> -->
                    <img src="./img/articleCovers/<%= articles[0].article_cover %> " alt="">
                </div>
                <a href="/noticia/<%= articles[0].id %>">
                    <div id="main-news-background"></div>
                    <h1>
                        <%= articles[0].article_headline.toUpperCase() %>
                    </h1>
                </a>
            </div>
            <div id="news">
                <h2>Principais Notícias</h2>
                <div class="line"></div>
                <% articles.forEach((element, index)=> { %>
                    <% if(index !== 0) { %>
                    <div class="short-info">
                        <a href="/noticia/<%= element.id %> ">
                            <h3><%= element.article_headline %> </h3>
                        </a>
                    </div>
                   <% } %>
                <% }) %>
            </div>
        </main>

        <!--***** Section about matchs *****-->
        <section id="matches">

            <!--Card about matchs news-->
            <div id="matches-of-the-day">
                <h2>Partidas do dia</h2>
                <div id="matches-card">
                    <% home.forEach((element, index) => { %>
                        <a href="/partida/<%= match[index].id %>">
                            <span class="soccer-selection"><%= home[index].name.toUpperCase() %></span>
                            <span> x </span>
                            <span class="soccer-selection"><%= visitors[index].name.toUpperCase() %></span>
                        </a>
                        <% if(index <= 4){ %>
                            <div class="line"></div>
                        <% } %> 
                    <% }) %> 
                </div>
            </div>

            <!--Card about matchs-->
            <div id="main-clashes">
                <h2>Principais confrontos</h2>
                <div id="clashes-card">
                    <% home.forEach((element, index) => { %>
                        <% if(index < 3){ %>
                            <span class="match">
                                <div class="match-flags">
                                    <img src="/img/<%= home[index].flag %>" alt="country flag">
                                </div>
                                0 x 0
                                <div class="match-flags">
                                    <img src="/img/<%= visitors[index].flag %>" alt="country flag">
                                </div>
                            </span>
                        <% } %>
                    <% }) %> 
                </div>
            </div>

            <div id="half-data-cards">
                <!--Card about "player of the match"-->
                <div id="player-of-the-match">
                    <h2>Jogador da rodada</h2>
                    <div class="data-card">
                        <div id="player-profile-pic">
                            <img src="./img/messi.jpg" alt="">
                        </div>
                        <div id="">
                            <span id="player-first-name">Lionel </span>
                            <span id="player-last-name">Messi</span>
                            <div>
                                <span id="player-country">Argentina</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Card about player statistics-->
                <div id="round-statistics">
                    <h2>Estatísticas da rodada</h2>
                    <div class="data-card">
                        <div class="round-statistics-data">
                            <p>12</p>
                            <p>gols</p>
                        </div>
                        <div class="round-statistics-data">
                            <p>7</p>
                            <p>assistências</p>
                        </div>
                        <div class="round-statistics-data">
                            <p>4</p>
                            <p>cartões</p>
                        </div>
                        <div class="round-statistics-data">
                            <p>2</p>
                            <p>pênaltis</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--***** Section of Highlights *****-->
        <section id="highlights">
            <h2>Vídeos em destaque</h2>
            <iframe 
                width="480" 
                height="260" 
                src="https://www.youtube.com/embed/8ea1tlsdRxs" 
                title="YouTube video player" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
        </section>

        <!--***** Section of Statistics *****-->
        <section id="statistics">
            <h2>Estatísticas</h2>
            <div class="statistic-row">
                <div>
                    <h3>Contador de gols</h3>
                    <div class="statistic-data">
                        <p><%= stats.goals %> </p>
                    </div>
                </div>
                <div>
                    <h3>Artilheiro</h3>
                    <div class="statistic-data">
                        <p><%= stats.gunner.name %></p>
                    </div>
                </div>
                <div>
                    <h3>Contador de assistências</h3>
                    <div class="statistic-data">
                        <p><%= stats.assistances %> </p>
                    </div>
                </div>
                <div>
                    <h3>Líder de assistências</h3>
                    <div class="statistic-data">
                        <p><%= stats.assistancesLeader.name %> </p>
                    </div>
                </div>
            </div>
        </section>

        <!--***** Footer *****-->
        <%- include('./partials/footer') %>



</body>

</html>